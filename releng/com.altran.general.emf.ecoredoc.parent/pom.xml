<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.altran.general.emf.ecoredoc</groupId>
	<artifactId>com.altran.general.emf.ecoredoc.parent</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>EcoreDoc Maven Parent</name>

	<properties>
		<ecoredoc-version>0.1.0-SNAPSHOT</ecoredoc-version>
		<ecoredoc-generator-version>${ecoredoc-version}</ecoredoc-generator-version>
		<ecoredoc-generator-config-version>${ecoredoc-version}</ecoredoc-generator-config-version>
		<ecoredoc-util-version>${ecoredoc-version}</ecoredoc-util-version>
		<ecoredoc-maven-version>${ecoredoc-version}</ecoredoc-maven-version>
		<ecoredoc-standalone-version>${ecoredoc-version}</ecoredoc-standalone-version>
		<ecoredoc-test-version>${ecoredoc-version}</ecoredoc-test-version>

		<emf-version>2.12.0</emf-version>
		<emf-ecore-version>${emf-version}</emf-ecore-version>
		<emf-common-version>${emf-version}</emf-common-version>
		<emf-xmi-version>${emf-version}</emf-xmi-version>
		<emf-change-version>2.11.0</emf-change-version>
		<xbase-lib-version>2.12.0</xbase-lib-version>
		<xcore-lib-version>1.1.100</xcore-lib-version>
		<xcore-version>1.3.1</xcore-version>
		<xtext-ecore-version>2.12.0</xtext-ecore-version>
		
		<junit-version>4.12</junit-version>
		<apache-commons-io-version>2.4</apache-commons-io-version>
		<google-guava-version>19.0</google-guava-version>
		<google-guice-version>4.0</google-guice-version>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<modules>
		<module>../../code/com.altran.general.emf.ecoredoc.generator</module>
		<module>../../code/com.altran.general.emf.ecoredoc.generator.config</module>
		<module>../../code/com.altran.general.emf.ecoredoc.maven</module>
		<module>../../code/com.altran.general.emf.ecoredoc.standalone</module>
		<module>../../code/com.altran.general.emf.ecoredoc.util</module>
		<module>../../test/com.altran.general.emf.ecoredoc.test</module>
	</modules>

	<packaging>pom</packaging>

	<build>
		<sourceDirectory>src</sourceDirectory>


		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.9.1</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/xtend-gen</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>